@require '../lib.import.styl'

grid-left-border-width = 2px
.lemon-grid
  width 100%

  th
    position relative
    &.has-commands .commands, &.has-commands .action-commands
      absolute top 5px right 5px
      .btn
        margin-right 5px;
  td
    position relative
    padding-top 5px !important
    padding-bottom 5px !important
    &:first-child
      padding-left 10px
      /*border-left solid grid-left-border-width orange*/
    &:last-child
      padding-right 10px
    .summary-total
      padding-bottom 25px
    &.has-commands .commands, &.has-commands .action-commands
      absolute top 5px right 5px
      .btn
        margin-right 5px;

    .action-commands
      display none

    &.old-debt-total
      padding-right 25px
    .note
      font-style italic; color #666666
    .super
      absolute top -1px
    &.border-bottom
      border-bottom solid 1px #D0D0D0
    &.border-top
      border-top solid 1px #D0D0D0
      //border-top solid 1px #CACACA
      //border-top solid 1px #EAEAEA
    &.white
      background-color white
    &.border-bottom-none
      border-bottom none
//#EFEFF4

  //Hover colors----------------------------------------------------
  tr
    &.detail-row:hover, &.detail-row.selected:hover
      background-color #C9EAFF !important
    &.detail-row td.command:hover
      color #d8d8d8
    &.detail-row.selected td.command:hover
      color #2e8bcc
    &.paid-row.receive:hover
      background-color lighten(pumpkin, 40) !important
    &.paid-row.paid:hover
      background-color lighten(lime, 45) !important

    &.detail-row:hover .action-commands
      display block
  //End hover colors------------------------------------------------

  tr.table-header
    border-bottom dashed 1px #B0B0B0
    th
      padding-top 5px; padding-bottom 5px

  tr.header-row, tr.paid-row, tr.detail-row
    td:first-child
      border-left solid grid-left-border-width orange

  tr.header-row
    border-bottom dashed 1px #B0B0B0
    td
      position relative
      .bill-header
        absolute top 0 left 0
        background-color orange; color #FFFFFF
        padding-right 5px
      .commands
        float right
        .btn
          margin-left 5px
  tr.detail-row
    background-color #FFFFFF
    &.selected
      background-color #E6F5FD !important
      td.command
        color #2e8bcc
        border-left: solid 2px #7ac5f9 !important
    &:nth-child(odd)
      background-color #f7f7f7
    &:not(:first-child)
      //border-bottom dashed 1px #eeeeee
    td:first-child
      padding-left 5px
      border-left solid grid-left-border-width #7ac5f9
    td.command
      color #D8D8D8
      padding 0 10px 0 10px
    &.errors .error-field
      color pumpkin !important
  tr.summary-row
    border-bottom dashed 1px #C8C8C8 !important
    margin-bottom 20px
    .blured-color
      color #999999
  tr.group-summary-row td:first-child
    border-left none

  tr.paid-row
    background-color #FFFFFF
    //background-color lighten(lime, 50)
    &.top
      border-bottom dashed 1px lime
    //td:first-child
      //border-left solid grid-left-border-width lime
    .receive
      color pumpkin
    .paid
      color lime
  tr.paid-row.paid
    background-color #FFFFFF
    //background-color lighten(pumpkin, 55)
    &.top
      border-bottom dashed 1px pumpkin
    /*td:first-child*/
      /*border-left solid grid-left-border-width pumpkin*/

  tr.top-dashed td
    border-top dashed 1px #B0B0B0
  tr.bottom-dashed td
    border-bottom dashed 1px #B0B0B0

  tr.top-header-row
    border-top dashed 1px #dddddd
  td.number, th.number
    text-align right
    input
      text-align right
  td.date, th.date
    text-align center
    input
      text-align center
  tr.editors
    border-top solid 1px #7ac5f9
    td:first-child
      border-left none
    &.dual-border
      border-bottom solid 1px #7ac5f9
    input
      font-style italic; font-weight bolder
      color #7ac5f9
    &.errors
      border-top solid 1px pumpkin
      &.dual-border
        border-bottom solid 1px pumpkin
      .error-field
        color pumpkin !important
  input
    border none; outline none; width 100%
    &.number
      float right
      text-align right

.lemon-grid.safe
  tr.detail-row, tr.paid-row, tr.header-row
    td:first-child
      border-left solid grid-left-border-width #7ac5f9

  tr.header-row td .bill-header
    background-color #7ac5f9
    &.billNo
      color #7ac5f9
      background-color #FFF

.lemon-grid.unSafe
  tr.detail-row, tr.paid-row, tr.header-row
    td:first-child
      border-left solid grid-left-border-width #999999

  tr.header-row td .bill-header
    background-color #B0B0B0
    &.billNo
      color #7ac5f9
      background-color #FFF

.panel-body .lemon-grid
  th:first-child
    padding-left 5px
  th:last-child
    padding-right 5px

.note
  font-style italic; color #666666