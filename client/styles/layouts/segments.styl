@require 'jeet'
@import 'rupture'
@require '../lib.import.styl'

.segments-container
  padding 5px 3px
  height 100%
  .segments-column
    height 100%
    display flex
    flex-direction column
    /*overflow-y scroll*/
    padding 5px 0
  /*background-color #C7C7C7*/
  /*border-radius 3px*/

  &.size2 .segments-column
    column(1/2, gutter: 0)
  &.size3 .segments-column
    column(1/3, gutter: 0)
    .item-wrapper
      padding 0 1px
      +above(1600px)
        span(1/2)
  &.size4 .segments-column
    column(1/4, gutter: 0)
  &.size5 .segments-column
    column(1/5, gutter: 0)
  &.size6 .segments-column
    column(1/6, gutter: 0)

.steps
  list-style: none;
  display: table;
  width: 100%;
  padding: 10px;
  margin: 0;
  position: relative;
  background-color: #FFF;

  li
    display: table-cell;
    text-align: center;
    width: 1%;

    .step
      line-height: 30px;
      background-color: #FFF;
      text-align: center;
      border: 5px solid #E3D0BA;
      color: #546474;
      font-size: 15px;
      border-radius: 100%;
      position: relative;
      z-index: 2;
      display: inline-block;
      width: 40px;
      height: 40px;

    &:before
      display: block;
      content: "";
      width: 100%;
      height: 1px;
      font-size: 0;
      overflow: hidden;
      border-top: 4px solid #E3D0BA;
      position: relative;
      top: 21px;
      z-index: 1;

    &:first-child
      text-align: left;
