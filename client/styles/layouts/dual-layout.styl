@require '../wings.import.styl'

.dual-layout
  clearfix()
  height 100%

  .detail-wrapper
    float left; width 100%; height 100%
    .dual-detail
      margin-left root-addon-size//; padding 0 10px
      height 100%; overflow hidden

  .dual-addon
    float left
    width root-addon-size; height 100%
    margin-left -100%

  .section
    background-color #ffffff
    /*border solid 1px #E5E5E5*/
    .panel-heading
      padding 8px
      /*position relative*/
      border-bottom none
      background-color #ffffff
    .panel-body
      padding 0; border-radius bottom 0
      border-top solid 1px #dddddd
    .panel-footer
      clearfix()
      background-color #ffffff
      border-top solid 1px #ddd
      .right-float
        float right; margin-right 10px