@require '../lib.import.styl'

.lemon-timelime
  position relative
  padding 15px 0
  &:before
    content " "
    height 100%; absolute top 0 left 74px
    border-left dashed 1px #7AC5F9

.timeline-block
  position relative
  clearfix()

  for $color in colors
    &.{$color[0]}
      .timeline-thumb, .avatar
        border solid 1px $color[1]; color $color[1]

  margin-bottom 20px
  .timeline-hook
    absolute top 27px left 10px
    width 37px; text-align right
    font-weight lighter
  .timeline-thumb
    absolute top 5 left 50px
    border-radius 50%; padding 2px
    background-color #FFFFFF; font-size 12px
    border solid 1px #666666; color #666666
    z-index 1
  .timeline-avatar
    absolute top 10px left 50px
    .avatar, .avatar.image img
      width 50px; height @width
      border-radius 50%
      background-color #F7F7F7
    .avatar.letter
      display block; text-align center
      width 50px; height @width; line-height @width

  .timeline-content
    margin-left 100px
    min-height 50px





.timeline
  border-collapse collapse
  border-spacing 0
  display table
  position relative
  width 100%
  .time-show
    margin-right -75px
    margin-top 30px
    position relative
    margin-bottom 30px
    &.first
    a
      color #fff
  &:before
    background-color #d8d9df
    bottom 0px
    content ""
    left 50%
    position absolute
    top 30px
    width 1px
    z-index 0
  .timeline-icon
    left -60px
    position absolute
    top 5px
    background #C7CBD6
    border-radius 50%
    -webkit-border-radius 50%
    display block
    height 30px
    width 30px
    text-align center
    color #fff
    padding-top 5px
    &.red
      background #EF6F66
    &.green
      background #39B6AE
    &.blue
      background #56C9F5
    &.purple
      background #8074C6
    &.light-green
      background #A8D76F
    &.yellow
      background #fed65a
    i
      margin-top 9px
  .time-icon
    &:before
      font-size 16px
      margin-top 5px
  .timeline-date
    left -245px
    position absolute
    text-align right
    top 12px
    width 150px
    display none

.time-show
  .btn
    width 150px

h3
  &.timeline-title
    margin 0
    color #C8CCD7
    font-size 20px
    font-weight 400
    margin 0 0 5px
    text-transform uppercase

.t-info
  color #C8CCD7

.timeline-item:before,.timeline-item.alt:after
  content ""
  display block
  width 50%
  content ""
  display block
  width 50%

.timeline-item
  display table-row
  .timeline-desk
    .arrow
      border-bottom 8px solid transparent
      border-top 8px solid transparent
      display block
      height 0
      left -7px
      position absolute
      top 13px
      width 0
      border-right 8px solid #fff !important
  &.alt
    .timeline-desk
      .arrow-alt
        border-bottom 8px solid transparent
        border-top 8px solid transparent
        display block
        height 0
        right -7px
        position absolute
        top 13px
        width 0
        left auto
        border-left 8px solid #fff !important
      .album
        margin-top 20px
        float right
        a
          margin-left 5px
          float right
    .timeline-icon
      left auto
      right -60px
    .timeline-date
      left auto
      right -245px
      text-align left
      display none
    &:before
      display none
    .panel
      margin-left 0
      margin-right 45px

.timeline-desk
  display table-cell
  vertical-align top
  width 50%
  h1
    font-size 16px
    font-weight 300
    margin 0 0 5px
  .panel
    display block
    margin-left 45px
    position relative
    text-align left
    background #fff
    margin-bottom 5px
  span
    a
      text-transform uppercase
  h5
    span
      color #999999
      display block
      font-size 12px
      margin-bottom 4px
  p
    font-size 14px
    margin-bottom 0
    color #999
  a
    color #1fb5ad
  .album
    margin-top 20px
    a
      margin-right 5px
      float left
  .notification
    background none repeat scroll 0 0 #FFFFFF
    margin-top 20px
    padding 8px

.timeline-desk h1.red,.timeline-desk span a.red
  color #EF6F66

.timeline-desk h1.green,.timeline-desk span a.green
  color #39B6AE

.timeline-desk h1.blue,.timeline-desk span a.blue
  color #56C9F5

.timeline-desk h1.purple,.timeline-desk span a.purple
  color #8074C6

.timeline-desk h1.light-green,.timeline-desk span a.light-green
  color #A8D76F

.timeline-desk h1.yellow,.timeline-desk span a.yellow
  color #fed65a

.mbot30
  margin-bottom 30px

.timeline-item.alt h1,.timeline-item.alt p
  text-align right

