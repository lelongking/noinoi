@require '../../wings.import.styl'

.avatar-wrapper
  absolute top 0 left 0
  .avatar-image
    position relative; overflow hidden
    width 40px; height @width
    border-radius 4px
    background-size cover
    background-color #abd4e3
    color transparent
    user-select none
    cursor default
    &.missing
      color #fff
      font-size 20px; font-weight 600
      text-align center
      line-height 40px
    &:not(.missing):hover .clear
      absolute top 0 right 0
      border-radius bottom left 4px
      background-color rgba(0,0,0, 0.7)
      color #ffffff