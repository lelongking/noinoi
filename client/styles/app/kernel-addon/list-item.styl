@require '../../wings.import.styl'

.dual-layout#home .kernel-addon .insert-wrapper
  margin 15px 10px 5px 5px
  .wings-field
    width 100%
    box-shadow inset 0 0 1px 1px rgba(0,0,0,0.02)

.dual-layout#home .kernel-addon .list
  border 1px solid #EAEAEA
  background #ffffff
  border-left none; border-right none
  user-select none
  .doc-item
    position relative; cursor pointer
    border-bottom 1px solid #F4F4F4
    &:hover { background-color: #FAFAFA }
    &:last-child
      border-bottom none
    .avatar-wrapper
      left 20px

.kernel-addon .doc-item
  .description
    font-weight 600
    padding 5px 10px
  .import-info
    .value
      color #333

.kernel-addon .doc-item
  .avatar-image
    border-radius 2px
    left 2px; top 3px
    avatar-size(40px)
    pointer-events none

  .doc-info
    margin-left 70px
    padding 4px 10px 4px 0
    min-height 46px
    .title
      overflow ellipsis
    .sub-title
      color #BABABA
      overflow ellipsis
  .time-stamp
    absolute top 3px right 12px
    font-size 12px; color #B2B2B2
    font-weight 600
  .price-stamp
    absolute top 20px right 12px

  .style-icon
    color #9EC9F4
    absolute left -7px top 5px
    font-size 25px
    &.list
      border-radius 50%
      font-size 16px
      border 1px solid #9EC9F4