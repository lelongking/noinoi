@require '../wings.import.styl'

.dual-layout#home
  .dual-detail
    .kernel-wrapper
      position relative; z-index 1
      float right; width 100%; height 100%
      .kernel-detail
        position relative
        margin-right kernel-addon-size
        height 100%

  .kernel-detail
    .kernel-content
      height 100%; padding-bottom 60px
      .channel-messages
        padding 0 0 15px 18px
    .kernel-footer
      fixed bottom 0 left root-addon-size right kernel-addon-size
      padding 0 15px 12px 15px
      .messenger-input
        border 1px solid #cfd6e6
        border-radius 4px; padding 8px 5px
        width 100%; font-size 16px
      &.full
        padding 0 0 21px 0