@import "../../../../styles/lib.import.styl"

#about, h1, h2, h3, h4, h5, h6
  font-weight 700

#about
  .navbar-login
    float left
    padding-top 5px
    height 42px

    .login-section
      margin-top 4px
      clearfix()

      input
        float left
        border solid 1px #e7e7e7
        color #6D6D6D
        background-color transparent
        padding 7px 10px; margin-right 1px
        font-size 14px
        width 140px
        margin-bottom 10px
        transition box-shadow 0.5s
        placeholder #8D8D8D
        &:focus
          box-shadow 0px 0px 0px 2px rgba(0, 0, 0, 0.1)
        &#authSecret
          width 103px
          border-radius right 2px
        &#authAlias
          border-radius left 2px

      .btn
        float right
        color #777
        background-color transparent
        padding 5px 7px; margin-right 2px; margin-left: 1px;
        font-size 17px
        border-radius 2px
        border solid 1px #E7E7E7
        transition text-shadow 1s, box-shadow 1s
        &.valid
          box-shadow 0 0 5px
        &.invalid
          pointer-events none
        &:active, &.valid:hover, &:focus
          background rgba(255, 255, 255, .3)
          outline none

  .topnav
    font-size 14px

  .lead
    margin 0
    font-size 18px; font-weight 400

  .intro-header
    padding-top 50px
    padding-bottom 50px
    text-align center
    color #f8f8f8
    background url(images/about/intro-bg.jpg) no-repeat center center
    background-size cover

  .intro-message
    position relative
    padding-top 20%
    padding-bottom 20%


  .intro-message > h1
    margin 0
    text-shadow 2px 2px 3px rgba(0,0,0,0.6)
    font-size 5em


  .intro-divider
    width 400px
    border-top 1px solid #f8f8f8
    border-bottom 1px solid rgba(0,0,0,0.2)


  .intro-message > h3
    text-shadow 2px 2px 3px rgba(0,0,0,0.6)

  @media(max-width767px)
    .intro-message
      padding-bottom 15%


    .intro-message > h1
      font-size 3em


    ul.intro-social-buttons > li
      display block
      margin-bottom 20px
      padding 0


    ul.intro-social-buttons > lilast-child
      margin-bottom 0


    .intro-divider
      width 100%



  .network-name
    text-transform uppercase
    font-size 14px
    font-weight 400
    letter-spacing 2px


  .content-section-a
    padding 50px 0
    background-color #f8f8f8


  .content-section-b
    padding 50px 0
    background-color #FFF
    border-top 1px solid #e7e7e7
    border-bottom 1px solid #e7e7e7


  .section-heading
    margin-bottom 30px


  .section-heading-spacer
    float left
    width 200px
    border-top 3px solid #e7e7e7


  .banner
    padding 40px 0
    color #f8f8f8
    background url(images/about/banner-bg.jpg) no-repeat center center
    background-size cover


  .banner h2
    margin 0
    text-shadow 2px 2px 3px rgba(0,0,0,0.6)
    font-size 3em


  .banner ul
    margin-bottom 0


  .banner-social-buttons
    float right
    margin-top 0


  @media(max-width1199px)
    ul.banner-social-buttons
      float left
      margin-top 15px



  @media(max-width767px)
    .banner h2
      margin 0
      text-shadow 2px 2px 3px rgba(0,0,0,0.6)
      font-size 3em


    ul.banner-social-buttons > li
      display block
      margin-bottom 20px
      padding 0


    ul.banner-social-buttons > lilast-child
      margin-bottom 0



  footer
    padding 20px 0
    background-color #f8f8f8


  p.copyright
    margin 15px 0 0

  
