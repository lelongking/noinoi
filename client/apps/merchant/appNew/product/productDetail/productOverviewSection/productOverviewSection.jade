template(name="productOverviewSection")
  .section.top.panel.panel-default.new-options-section
    input.hidden.avatarFile(type="file")
    .panel-heading
      +avatarImageComponent(avatar=avatarUrl alias=firstName)
      .caption(data-toggle="tooltip" data-container="body" data-placement="right" title="tên sản phẩm")
        span.editable.dashed(class="{{isEditMode false}}") {{name}}

        input.editable.dashed.productEdit(class="{{isEditMode true}}" maxlength="50" size="20"
        name="productName" placeholder="tên sản phẩm" value="{{name}}")


      .sub1(data-toggle="tooltip" data-container="body" data-placement="right" title="mã sản phẩm")
        span.editable.dashed(class="{{isEditMode false}}") {{code}}

        input.editable.dashed.productEdit(class="{{isEditMode true}}" maxlength="50" size="20"
        name="productCode" placeholder="mã sản phẩm" value="{{code}}")

      .sub2(data-toggle="tooltip" data-container="body" data-placement="right" title="ghi chú")
        span.editable.dashed(class="{{isEditMode false}}" style="{{colorIsUndefined description}}") {{getString description 'ghi chú'}}

        input.editable.dashed.productEdit(class="{{isEditMode true}}" maxlength="100" size="25"
         name="productDescription" placeholder="ghi chú" value="{{description}}")



      .commands
        .lemon.btn.rounded.red.icon-minus-4.productDelete(class="{{showDeleteProduct}}"
        data-toggle="tooltip" data-container="body" data-placement="bottom" title="xóa")

        .lemon.btn.rounded.lime.icon-ok-6.syncProductEdit(class="{{showSyncProduct}}"
        data-toggle="tooltip" data-container="body" data-placement="bottom" title="xác nhận")

        .lemon.btn.rounded.peter-river.icon-reply-3.cancelProduct(class="{{isEditMode true}}"
        data-toggle="tooltip" data-container="body" data-placement="bottom" title="quay lại")

        .lemon.btn.rounded.silver.icon-wrench-outline.editProduct(class="{{isEditMode false}}"
        data-toggle="tooltip" data-container="body" data-placement="left" title="chỉnh sửa")

    .panel-tab
      .panel-heading(style="padding-top: 6px; padding-bottom: 6px;")
        span.icon-up-open-3.hideTab(class="{{isShowTab true}}" style="cursor:pointer;") Thông tin mở rộng
        span.icon-down-open-3.showTab(class="{{isShowTab false}}" style="cursor:pointer;") Thông tin mở rộng

      .panel-body(class="{{isShowTab true}}")
        .collapsible-row.full-width.pull-right
          .description.pull-right(style="width: 15%; margin: 0px 0px 0px 15px; padding-right: 0px;") Giá tiền mặt
          .description.pull-right(style="width: 15%; margin: 0px 0px 0px 15px; padding-right: 0px;") Giá bán nợ
          .description.pull-right(style="width: 15%; margin: 0px 0px 0px 15px; padding-right: 0px;") Giá nhập
          .description.pull-right(style="width: 15%; margin: 0px 0px 0px 15px; padding-right: 0px;") Mã vạch
          .description.pull-right(style="width: 15%; margin: 0px 0px 0px 15px; padding-right: 0px;") Đơn vị tính


        .collapsible-row.full-width.pull-right
          input.input-field.pull-right.editCash(name="directSalePrice")
          input.input-field.pull-right.editCash(name="debtSalePrice")
          input.input-field.pull-right.editCash(name="importPrice")
          input.input-field.pull-right.editCash(name="barcode" style="text-align: right;")
          input.input-field.editCash(name="unitName" style="width: 28%" value="{{unitName}}")

        .collapsible-row.full-width.pull-right
          input.input-field.pull-right.editCash(name="directSalePriceEx")
          input.input-field.pull-right.editCash(name="debtSalePriceEx")
          input.input-field.pull-right.editCash(name="importPriceEx")
          input.input-field.pull-right.editCash(name="barcodeEx" style="text-align: right;")

          .description.editCash(style="width: 30%; min-width: 200px; height: 40px; padding-left: 15px;")
            .input-group
              input.form-control.input-field.full-width(name="unitNameEx" value="{{unitNameEx}}"
              style="height: 40px;padding: 0;border: none; border-bottom: 1px solid #e0e0e0; box-shadow: none; border-radius: 0px; */")

              span.input-group-addon(style="height: 40px;width: 15px;padding: 0;border: none;background-color: #fff;") =

              input.form-control.input-field(name="conversion" value="{{conversion}}"
              style="height: 40px; width: 40px;padding: 0;text-align: center; border: none; border-bottom: 1px solid #e0e0e0; box-shadow: none;")

              span.input-group-addon(style="height: 40px; border: none; background-color: #fff; padding: 0px 0px 0px 10px;") {{unitName}}

        .collapsible-row
          .description Tồn kho đầu kỳ
          .description.editCash(style="width: 20%; min-width: 200px; height: 40px; padding-left: 15px;")
            .input-group
              input.form-control.input-field.full-width(name="importQuality"
              style="height: 40px;padding: 0;border: none; border-bottom: 1px solid #e0e0e0; box-shadow: none; border-radius: 0px; */")
              span.input-group-addon(style="height: 40px; border: none; background-color: #fff; padding: 0px 0px 0px 10px;") {{unitName}}


          span.editable.pull-right Chưa nhập tồn kho lúc này
          i.icon-ok-6.pull-right.inventory(class="{{isInventory}}")

        .collapsible-row
          .description Định mức tồn kho
          .description.editCash(style="width: 20%; min-width: 200px; height: 40px; padding-left: 15px;")
            .input-group
              input.form-control.input-field.full-width(name="lowNorms"
              style="height: 40px;padding: 0;border: none; border-bottom: 1px solid #e0e0e0; box-shadow: none; border-radius: 0px; */")
              span.input-group-addon(style="height: 40px; border: none; background-color: #fff; padding: 0px 0px 0px 10px;") {{unitName}}