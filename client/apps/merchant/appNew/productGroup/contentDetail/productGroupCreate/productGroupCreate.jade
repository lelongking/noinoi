template(name="productGroupCreate")
  .dual-detail-wrapper: .dual-detail
    .nano: .nano-content
      .section.top.panel.panel-default.new-options-section
        .panel-heading
          span.icon-contacts tạo nhóm sản phẩm
          .commands
            .lemon.btn.lime.icon-ok-6.addProductGroup Lưu
            .lemon.btn.red.icon-cancel-7.cancelProductGroup Hủy

        .panel-body
          .collapsible-row
            .description Tên nhóm
            input.input-field.newProductGroup(name="productGroupName"
            placeholder="Nhập tên nhóm sản phẩm")

          .collapsible-row
            .description Ghi chú
            input.input-field.newProductGroup(name="productGroupDescription" style="width: 70%;"
            placeholder="Ghi thêm thông tin")
