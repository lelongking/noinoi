template(name="productSearch")
  .dual-addon
    .search-filter.icon-search-8
      input(name='searchFilter' type="text")
      if creationMode
        .lemon.btn.rounded.tiny.lime.icon-plus-6.create-command.createStockBtn

    .nano: .nano-content(style="margin-bottom: 35px;"):  .group-wrapper
      each productSearches
        .advanced.caption.inner.product-selection(class="{{activeClass}}")
          +avatarImageComponent(avatar=avatarUrl alias=name instance=this)
          span.text {{name}}
          span.right-info {{allQuantity}} {{unitName}}