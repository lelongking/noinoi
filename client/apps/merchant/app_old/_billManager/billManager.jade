template(name="billManager")
  #content.modern.sales-app
    .dual-content
      .dual-addon
        //.group-nav
        //  .caption.inner.active
        //    span.avatar.letter {{getPublishedCount 'deliveries'}}
        //    span.text.uppercase TÌNH TRẠNG PHIẾU
        //  .caption.inner.toOrderManager
        //    span.avatar.letter {{getPublishedCount 'orderManagers'}}
        //    span.text.uppercase PHIẾU HOÀN THÀNH


        .search-filter.icon-search-8
          input(name='searchFilter' type="text")

        .nano: .nano-content(style="margin-bottom: 35px;"): .group-wrapper
          each allBills
            .caption.inner.advanced.product-selection
              +avatarImageComponent(avatar=avatarUrl alias=buyerName)
              span.text {{buyerName}}
                //.commands: span.icon-right-open-big.addSaleDetail
              span.left-info(style="text-transform: none; max-width: 140px") {{getSellerName seller}}
              span.right-info {{momentFormat version.createdAt 'DD/MM/YYYY'}}

      .dual-detail-wrapper
        .dual-detail
          .nano: .nano-content
            .segments-container.size2
              .header-container(style="padding-bottom: 10px;")
                ul.steps
                  li: span.step: b 1
                  li: span.step: b 7
                  li: span.step.icon-minus-4(style="color: #fff; background-color: #d35400;")

              +gridComponent(options=waitingGridOptions wrapperClass="segments-column" headerTemplate="billThumbnailHeader1" animation="bounceInDown")
              +gridComponent(options=deliveringGridOptions wrapperClass="segments-column" headerTemplate="billThumbnailHeader2" animation="bounceInDown")



