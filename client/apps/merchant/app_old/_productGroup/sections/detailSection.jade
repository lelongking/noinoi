        //h3 Tổng tiền: {{formatNumber totalPurchases}} VNĐ

template(name="productGroupHeaders")
  tr
    if isManager
      th(style="width:30px")
    th(style="width:auto")
    th(style="width:80px")
    th(style="width:80px")
    th(style="width:170px")