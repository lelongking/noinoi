@import "../../../../styles/lib.import.styl"
@import 'jeet'
package-theme(color)
  .title
    background-color darken(color, 5)
  .content, .footer
    background-color color
  .features li .command
    background-color color



.section .region .title span
  cursor: pointer

.section .region .detail-wrapper
  padding: 10px

  .input-group-addon
    padding-top: 14px;
    font-size: 16px;
    border: none
    background-color: #FFF

  input
    text-align: center
    font-style: italic
    font-weight: bolder
    color: #7ac5f9

  span.icon-ok-6
    color: #BEBEBE
    padding: 3px 1px
    //border: 1px solid #ccc
    background-color rgb(236, 236, 236)
    border-radius 3px
    &.selected
      color: #2e8bcc

  .productUnit-table-group
    padding: 0 15px

    .col { padding-left: 2px; padding-right: 2px; }
    .package-block
      cursor pointer
      border-radius 3px
      overflow hidden
      .title { background: #DBDBDB; }

      .title, .footer
        color #5C5C5C
        text-transform capitalize
        line-height 2.5
        position relative
        text-align center
        font-size 15px

      .content
        position: relative
        color #FEFEFE
        padding 20px 0 10px 0
        background #82DACA
        text-align center
        font-weight lighter

        .active-icon
          font-size 60px
          absolute right 0px top -50px
        .price
          position relative
          display inline-block
          margin-bottom 0.625rem
          sup
            font-size 14px
            absolute top 12px left -20px

          span
            font-size 50px
          sub
            font-size 20px; width 95px
            absolute right -31px bottom 0px

        .hint
          font-style: italic;
          font-size: 13px;

      .features
        list-style-type none
        background #EFEFF4
        text-align center
        color #9C9C9C
        &.product {text-align: right}

        li
          position relative
          padding 10px 10px
          width 100%
          border-top: solid 1px #FFF !important
          &:before { margin-right: 10px; font-size: 25px; }
          &:first-child { border-top: none; }
          span.quality
            font-size 18px
            font-weight bolder
          .command
            cursor pointer
            absolute top 10px
            padding 5px
            color #ffffff
            background-color #666666
            border-radius 50%
            &:hover
              box-shadow 0px 0px 0px 3px rgba(0, 0, 0, 0.1)
            &.lower
              left 3px
            &.raise
              right 3px

      .footer
        clearfix()
        background #82DACA