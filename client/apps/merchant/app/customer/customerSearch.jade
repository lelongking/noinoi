template(name="customerManagementCustomerSearch")
  .search-filter.icon-search-8
    input(name='searchFilter' type="text" placeholder="tìm khách hàng...")
    if creationMode
      .lemon.btn.rounded.tiny.lime.icon-plus-6.create-command.createCustomerBtn

  .nano: .nano-content(style="margin-bottom: 35px;"): .list
    each customerListFilters
      .doc-item(class="{{activeClass 'customerManagementCurrentCustomer'}}")
        .avatar-wrapper
          .avatar-image(class="{{hasAvatar}}" style="background-image:url('{{avatarUrl}}')") {{aliasLetter firstName}}

        .doc-info
          .title {{name}}
          //.sub-title {{description}}

          if totalCash
            .price-stamp
              <b>{{formatNumber totalCash}}</b>
              span(style="font-size: 11px;") <b>VND</b>
