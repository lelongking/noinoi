template(name="staffManagement")
  //#header

  #content.modern.staff-management
    .dual-content
      .dual-addon
        .search-filter.icon-search-8
          input(name='searchFilter' type="text" placeholder="tìm nhân viên...")
          if getSession 'staffManagementCreationMode'
            .lemon.btn.rounded.tiny.lime.icon-plus-6.create-command.createStaffBtn

        .nano: .nano-content(style="margin-bottom: 35px;"): .group-wrapper
          each staffSearcher
            .caption.advanced.inner.product-selection(class="{{activeClass 'staffManagementCurrentStaff'}}")
              +avatarImageComponent(avatar=avatarUrl alias=getEmails)
              span.text {{profile.name}}
              span.right-info {{permission}}


      .dual-detail-wrapper
        .dual-detail
          .nano: .nano-content
            +staffManagementOverviewSection currentStaff
            if getSession 'showCustomerListNotOfStaff'
              +customerNotOfStaffSection currentStaff
            else
              +customerOfStaffSection currentStaff


