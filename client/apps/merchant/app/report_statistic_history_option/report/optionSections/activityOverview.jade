template(name="activityOverview")
  .editor-row
    .editor-wrapper.right(style='width: 125px')
      span.ilabel(style='background-color:#f35112; color:#fff;') đến hết ngày
      input(name='endDate', binding='datePicker', todayhighlight='true', maxlength='20', style='border-bottom: none; text-align: center;')
    .editor-wrapper.right(style='width: 125px')
      span.ilabel(style='background-color: #f35112; color: #fff;') xem từ ngày
      input(name='startDate', binding='datePicker', todayhighlight='true', maxlength='20', style='border-bottom: none; text-align: center;')

  with dataLists
    .section.panel.panel-default(style="margin-bottom: 10px;")
      table.lemon-grid
        tr
          th(style="width:40px")
          th(style="width:110px")
          th(style="width:5px")
          th(style="width:120px")
          th(style="width:5px")
          th(style="width:auto")

        tr
          td
          td: b Tổng chi phí
          td.number :
          td.number <b>{{formatNumber overview.totalCosts}} </b>
          td
          td VNĐ

        tr
          td
          td: b Tổng doanh số
          td.number :
          td.number <b>{{formatNumber overview.totalSales}}</b>
          td
          td VNĐ

        tr
          td
          td: b Tổng lợi nhận
          td.number :
          td.number <b>{{formatNumber overview.totalProfits}}</b>
          td
          td VNĐ


    .section.panel.panel-default(style="margin: 0; border: none;")
      .panel-heading
        table.lemon-grid
          tr
            th(style="width:45px") STT
            th(style="width:100px") Ngày
            th(style="width:auto") Đối tượng
            th(style="width:100px") Hoạt động
            th.number(style="width:50px") Phiếu
            th.number(style="width:170px") Giá trị phiếu


    .nano: .nano-content(style="margin-bottom: 190px;")
      .section(style="margin: 0")
        table.lemon-grid
          tr
            th(style="width:55px")
            th(style="width:100px")
            th(style="width:auto")
            th(style="width:100px")
            th(style="width:50px")
            th(style="width:180px")

          each details
            tr.detail-row
              td(style="padding-left: 10px;") {{count}}
              td {{momentFormat sortDate "DD/MM/YYYY"}}
              td {{owner.name}}
              td {{activity}}
              td.number {{code}}
              td.number {{formatNumber finalPrice}} VND
