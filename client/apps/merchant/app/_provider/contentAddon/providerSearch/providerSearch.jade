template(name="providerSearch")
  .dual-addon
    .search-filter.icon-search-8
      input(name='searchFilter' type="text" placeholder="tìm nhà cung cấp...")
      .icon-user-add-1.create-new-command(data-toggle="tooltip" data-container="body" data-placement="right" title="Tạo mới")



    .nano: .nano-content(style="margin-bottom: 35px;")
      .list
        .caption-item: b DANH SÁCH NHÀ CUNG CẤP

        each providerLists
          .doc-item(class="{{activeClass}}")
            .avatar-wrapper: .avatar-image(class="missing"
            style="background-image:url('')") {{aliasLetter firstName}}

            .doc-info
              .title {{name}}
              .sub-title {{code}}

              .price-stamp
                b {{formatNumber totalCash}}
                span(style="font-size: 11px;"): b VND
