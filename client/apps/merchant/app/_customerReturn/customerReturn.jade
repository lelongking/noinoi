template(name="customerReturn")
  #content.modern.sales-app
    .dual-content
      .dual-addon
        .search-filter.icon-search-8: input(name='searchFilter' type="text" placeholder="tìm sản phẩm...")
        .nano: .nano-content(style="margin-bottom: 35px;"): .group-wrapper
          each getSession 'currentReturnParent'
            .caption.advanced.inner.product-selection(class="{{productSelectionActiveClass}}")
              +avatarImageComponent(avatar=avatarUrl alias=name)
              span.text {{getProductName product}}
                .commands
                  span.icon-right-open-big.addReturnDetail
              span.right-info {{availableQuantity}} {{getProductUnitName productUnit}}

      .dual-detail-wrapper
        .dual-detail: .nano: .nano-content: +customerReturnDetailSection getSession 'currentCustomerReturn'



  #footer.modern
    .editor-wrapper.dual-spacer
    .editor-row
      .editor-wrapper(style="width: 200px")
        span.ilabel.optional khách hàng
        +iSelect(options=customerSelectOptions class="field customerSelect")

      .editor-wrapper(style="width: 200px")
        span.ilabel.optional phiếu bán
        +iSelect(options=orderSelectOptions class="field orderSelect")

      .editor-wrapper.pull-right
        button.lemon.btn.lime.pull-right.returnSubmit(class="{{allowSuccessReturn}}" type='submit' style="margin-right: 5px;") HOÀN TẤT

    +tabComponent(options=tabCustomerReturnOptions)