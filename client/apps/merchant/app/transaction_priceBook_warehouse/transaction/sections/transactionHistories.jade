template(name="cashReceiptVoucherTransactionHistorySection")
  .section.panel.panel-default.printable-area
    .panel-heading
      table.lemon-grid
        tr
          th(style="width:90px") Ngày Tạo
          th(style="width:170px") Nhân Viên
          th(style="width:auto") Khách Hàng
          th(style="width:200px") Loại Phiếu (Thu - Chi)
          th.number(style="width:150px") Tổng Tiền

    .panel-body
      table.lemon-grid
        tr
          th(style="width:100px")
          th(style="width:170px")
          th(style="width:auto")
          th(style="width:200px")
          th(style="width:160px")

        each details
          tr.detail-row
            td.first-column {{momentFormat version.createdAt 'DD/MM/YYYY'}}
            td {{staffName}}
            td {{ownerName}}
            td {{description}}
            td.number {{formatNumber balanceChange}} VNĐ


