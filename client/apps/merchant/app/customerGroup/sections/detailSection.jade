template(name="customerGroupDetailSection")
  .section.panel.panel-default.printable-area
    .panel-heading
      .show-on-print
        +merchantPrintingHeader
        .printing-info
          .document-name {{name}}

      table.lemon-grid: tr
        if isManager
          th(style="width:20px")
        th(style="width:auto") TÊN KHÁCH HÀNG
        th(style="width:110px; text-align:center") GD GẦN NHẤT
        th.number(style="width:110px") GIÁ TRỊ PHIẾU
        th.number(style="width:140px") TỔNG TIỀN

    .panel-body.debt-details
      table.lemon-grid(style="cursor: pointer;")
        +customerGroupHeader
        each customerLists
          tr.detail-row(class="{{selected}}")
            if isManager
              td.command.icon-ok-6
            td {{name}}
            td.date {{momentFormat latestTradingDay 'DD/MM/YYYY'}}
            td.number {{latestTradingTotalCash}}
            td.number {{debtTotalCash}}



    .panel-footer
      .right-float
        span.s5 TỔNG NỢ:
        if isManager
          span.s3 <b>{{formatNumber totalCash}}</b> VNĐ
        else
          span.s3 <b>{{formatNumber totalCashByStaff}}</b> VNĐ

template(name="customerGroupHeader")
  tr
    if isManager
      th(style="width:30px")
    th(style="width:auto")
    th(style="width:90px")
    th(style="width:120px")
    th(style="width:150px")