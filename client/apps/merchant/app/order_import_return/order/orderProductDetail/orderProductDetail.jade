template(name="orderProductDetail")
  .dual-detail-wrapper: .dual-detail: .nano: .nano-content
    .section.top.panel.panel-default.printable-area
      .panel-heading
        .hide-on-print
          span Số Phiếu: <b>{{billNo}}</b> , ngày <b>{{timeDMY}}</b> <b>{{fullDay}}</b> - <b>{{timeHM}}<sup>{{timeS}}</sup></b>
        .show-on-print
          +merchantPrintingHeader(owner=buyer billNo=billNo title='phiếu bán hàng' position='Người bán')




      .panel-body
        table.lemon-grid
          tr.table-header
            th.hide-on-print(data-toggle="tooltip" data-container="body" data-placement="top" title="lãi suất"
              style="width:40px; padding-left: 10px;") LS
            th.bill-name(style="width:auto") SẢN PHẨM
            th.quality(data-toggle="tooltip" data-container="body" data-placement="top" title="số lượng"
              style="width:50px") SL
            th(style="width:80px") ĐƠN VỊ
            th.number.price(style="width:100px") ĐƠN GIÁ
            th.number.bill-discount(style="width:100px") GIẢM GIÁ
            th.number.final-price(style="width:130px") THÀNH TIỀN

          each details
            if isRowEditing
              +orderProductRowEdit
            else
              +orderProductRowDisplay
          tr
          tr.top-dashed.space
            td(colspan="7" style="height: 25px")
              input.editable.dashed.note(name="orderDescription" value="{{description}}" placeholder="ghi chú đơn hàng" size="40" maxlength="120")
          tr
            td.hide-on-print
            td.date(colspan="2"): span.uppercase khách hàng
            td.number(colspan="2"): span.s5 TỔNG CỘNG:
            td.number(colspan="2"): span.s4 <b>{{formatNumber finalPrice}}</b> VNĐ
          tr
            td.hide-on-print
            td(colspan="2")
            td.number(colspan="2"): span.s5 CHIẾT KHẤU:
            td.number(colspan="2"): span.s4 <b>{{formatNumber discountCash}}</b> VNĐ
          tr
            td.hide-on-print
            td(colspan="2")
            td.number(colspan="2"): span.s5 TIỀN CŨ:
            td.number(colspan="2"): span.s4 <b>{{formatNumber customerOldDebt}}</b> VNĐ
          tr
            td.hide-on-print
            td.date(colspan="2"): span.s6.note (<i>Chữ ký và Họ Tên</i>)
            td.number(colspan="2"): span.s5 THANH TOÁN:
            td.number(colspan="2"): span.s4 <b>{{formatNumber depositCash}}</b> VNĐ
          tr
            td.hide-on-print
            td(colspan="2")
            td(colspan="2")
            td.number(colspan="2" style="border-top: solid 1px #d7d7d7")
              span.s4 <b>{{formatNumber customerFinalDebt}}</b> VNĐ

      .panel-footer.show-on-print
        .grea-print-message
          .rounded-gera-logo: .rounded-wrapper
            img(src="/images/white-pixel.jpg")
            img(style="width: 40px; position: absolute; top: 3px; left: 3px; " src="/images/noinoi.png")
          i(style="font-size: 16px;") In từ hệ thống www.noinoi.vn - công ty Công Nghệ Thiên Ban (0978 188 119)