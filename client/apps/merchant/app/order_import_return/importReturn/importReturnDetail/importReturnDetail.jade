template(name="importReturnDetail")
  .dual-detail-wrapper: .dual-detail: .nano: .nano-content
    .section.top.panel.panel-default.printable-area
      .panel-heading
        .hide-on-print
          span <b>{{timeHM}}<sup>{{timeS}}</sup></b>, ngày <b>{{timeDMY}}</b> <b>{{fullDay}}</b>
        .show-on-print
          +merchantPrintingHeader
          .printing-info
            .document-name PHIẾU TRẢ HÀNG

      .panel-body
        table.lemon-grid
          tr.table-header
            th(style="width:auto") SẢN PHẨM
            th(style="width:70px") SL
            th.date(style="width:90px") ĐƠN VỊ TÍNH
            th.number(style="width:80px") ĐƠN GIÁ
            th.number(style="width:200px") THÀNH TIỀN

          each importReturnDetails
            if isRowEditing
              +importReturnProductRowEdit
            else
              +importReturnProductRowDisplay


      .panel-footer
        input.editable.dashed.note(name="returnDescription"  value="{{importReturn.description}}" placeholder="ghi chú đơn hàng" size="40" maxlength="200")
        .right-float
          span.s3 <b>{{formatNumber importReturn.finalPrice}}</b> VNĐ